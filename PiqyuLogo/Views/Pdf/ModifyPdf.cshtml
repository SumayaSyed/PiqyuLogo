@{
    ViewBag.Title = "Modify PDFs in Folder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #f4f4f9;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        max-width: 800px;
        margin: 50px auto;
        background-color: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
    }

    h2 {
        color: #333;
        text-align: center;
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: 600;
        color: #555;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ddd;
        padding: 10px;
    }

    .btn {
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 1rem;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
        border: none;
    }

    .text-center {
        text-align: center;
    }
</style>

<div class="container">
    <h2>Modify PDFs in Folder</h2>
    <p class="text-muted text-center">Select a folder containing PDFs and upload an image to modify all PDFs.</p>

    <form method="post" enctype="multipart/form-data" action="/Pdf/ModifyPdf">
        <div class="form-group">
            <label for="folderInput" class="form-label">Choose a Folder <span class="text-danger">*</span></label>
            <input type="file" class="form-control" id="folderInput" name="folderPath" webkitdirectory required />
        </div>

        <div class="form-group">
            <label for="imageFile" class="form-label">Choose an Image File <span class="text-danger">*</span></label>
            <input type="file" class="form-control" name="imageFile" id="imageFile" required />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Modify PDFs</button>
            <button type="reset" class="btn btn-secondary">Reset</button>
        </div>
    </form>
</div>
